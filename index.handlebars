<div class="container bg-warning">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-4">
            <h2>Burger Menu:</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-4">
            <h2>Burgers Eaten:</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-2"></div>
    </div>
</div>